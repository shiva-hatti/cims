package com.iris.controller;

import java.util.ArrayList;
import java.util.List;

import org.apache.logging.log4j.LogManager;
import org.apache.logging.log4j.Logger;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestHeader;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.iris.caching.ObjectCache;
import com.iris.dto.ServiceResponse;
import com.iris.dto.ServiceResponse.ServiceResponseBuilder;
import com.iris.exception.ApplicationException;
import com.iris.model.ErrorVersionChannelMapping;
import com.iris.model.ReturnTemplate;
import com.iris.service.impl.ErrorVersionChannelMappingService;
import com.iris.util.constant.ErrorCode;
import com.iris.util.constant.ErrorConstants;
import com.iris.validator.ErrorVersionChannelMappingValidator;

/**
 * @author apagaria
 */
@RestController
@RequestMapping("/service/errorVersionChannelMappingController")
public class ErrorVersionChannelMappingController {

	@Autowired
	private ErrorVersionChannelMappingService errorVersionChannelMappingService;

	static final Logger LOGGER = LogManager.getLogger(ErrorVersionChannelMappingController.class);

	/**
	 * This API is used to fetch the
	 * 
	 * @param jobProcessId
	 * @return
	 */
	@GetMapping(value = "/getErrorCodeDetailsByStatus")
	public ServiceResponse fetchErrorCodeDetailByStatus(@RequestHeader("JobProcessingId") String jobProcessId,
			@RequestHeader("ReturnTemplateId") Long returnTemplateId, @RequestHeader("Channel") int channel,
			@RequestHeader("IsActive") Boolean isActive) {
		ServiceResponse serviceResponse = null;
		ServiceResponseBuilder serviceResponseBuilder = new ServiceResponseBuilder();
		serviceResponseBuilder.setStatus(true);
		try {
			LOGGER.info(
					"START - Get Error Code Detail By Status Request received for Request trans Id " + jobProcessId);

			// validation
			ErrorVersionChannelMappingValidator.validateFetchErrorCodeDetailParameter(jobProcessId, channel,
					returnTemplateId);

			// Fetching the result
			List<ErrorVersionChannelMapping> errorVersionChannelMappings = fetchErrorCodeDetailObject(channel, isActive,
					returnTemplateId);

			errorVersionChannelMappings = returnObjectConvertor(errorVersionChannelMappings);

			serviceResponseBuilder.setResponse(errorVersionChannelMappings);
			serviceResponse = serviceResponseBuilder.build();

		} catch (ApplicationException applicationException) {
			LOGGER.error(applicationException.getErrorMsg() + " for Transaction ID : " + jobProcessId);
			serviceResponse = new ServiceResponseBuilder().setStatus(false)
					.setStatusCode(applicationException.getErrorCode())
					.setStatusMessage(applicationException.getErrorMsg()).build();
		} catch (Exception e) {
			LOGGER.error(ErrorConstants.ERROR_MSG_SERVICE.getConstantVal() + "Transaction ID : " + jobProcessId, e);
			serviceResponse = new ServiceResponseBuilder().setStatus(false).setStatusCode(ErrorCode.EC0013.toString())
					.setStatusMessage(ObjectCache.getErrorCodeKey(ErrorCode.EC0013.toString())).build();
		}
		LOGGER.info("END - Get Error Code Detail By Status Request received for Request trans Id " + jobProcessId);
		return serviceResponse;
	}

	/**
	 * @param errorVersionChannelMappings
	 * @return
	 */
	private List<ErrorVersionChannelMapping> returnObjectConvertor(
			List<ErrorVersionChannelMapping> errorVersionChannelMappings) {
		List<ErrorVersionChannelMapping> returnObjectList = new ArrayList<ErrorVersionChannelMapping>();
		for (ErrorVersionChannelMapping errorVersionChannelMapping : errorVersionChannelMappings) {
			ErrorVersionChannelMapping returnErrorVersionChannelMappingObject = new ErrorVersionChannelMapping();
			returnErrorVersionChannelMappingObject
					.setErrorVersionChannelMappingId(errorVersionChannelMapping.getErrorVersionChannelMappingId());
			returnErrorVersionChannelMappingObject
					.setErrorCodeDetailIdFk(errorVersionChannelMapping.getErrorCodeDetailIdFk());
			returnErrorVersionChannelMappingObject
					.setIsActiveForFileBasedFiling(errorVersionChannelMapping.getIsActiveForFileBasedFiling());
			returnErrorVersionChannelMappingObject
					.setIsActiveForWebFormBasedFiling(errorVersionChannelMapping.getIsActiveForWebFormBasedFiling());
			ReturnTemplate returnTemplate = new ReturnTemplate();
			returnTemplate
					.setReturnTemplateId(errorVersionChannelMapping.getReturnTemplateIdFk().getReturnTemplateId());
			returnErrorVersionChannelMappingObject.setReturnTemplateIdFk(returnTemplate);
			returnObjectList.add(returnErrorVersionChannelMappingObject);
		}
		return returnObjectList;
	}

	/**
	 * This method is used to create object to fetch error code detail record from
	 * database.
	 * 
	 * @param columnValueMap
	 * @param channel
	 * @param isActive
	 */
	private List<ErrorVersionChannelMapping> fetchErrorCodeDetailObject(int channel, Boolean isActive,
			Long returnTemplateId) {
		List<ErrorVersionChannelMapping> errorVersionChannelMappingList = null;
		ReturnTemplate returnTemplate = new ReturnTemplate();
		returnTemplate.setReturnTemplateId(returnTemplateId);
		if (channel == 1) {
			// For Web form based
			errorVersionChannelMappingList = errorVersionChannelMappingService
					.getErrorVersionChannelMappingRecordForWebFormBasedByStatus(isActive, returnTemplate);
		} else if (channel == 2) {
			// For file based
			errorVersionChannelMappingList = errorVersionChannelMappingService
					.getErrorVersionChannelMappingRecordForFileByStatus(isActive, returnTemplate);
		}
		return errorVersionChannelMappingList;
	}
}
